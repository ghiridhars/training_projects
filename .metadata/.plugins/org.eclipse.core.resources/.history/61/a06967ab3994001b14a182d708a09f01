#Registering mysql Driver
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

#Connection url for the database "student"
spring.datasource.url=jdbc:mysql://localhost:3306/employee_db?createDatabaseIfNotExist=true

#Username and password
spring.datasource.username=root
spring.datasource.password=Root$666

#Allows hibernate to generate MySQL dialect optimized for particular DBMS
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL8Dialect
 
#Show or not log for each SQL query
spring.jpa.show-sql=true

#Hiberbate ddl auto(create,update):with "update" the database schema 
#will be automatically updated accordingly to java entities in the project
spring.jpa.hibernate.format_sql = True
spring.jpa.hibernate.ddl-auto = update

#For view manage and mapping
spring.mvc.view.prefix = /WEB-INF/jsp/
spring.mvc.view.suffix = .jsp